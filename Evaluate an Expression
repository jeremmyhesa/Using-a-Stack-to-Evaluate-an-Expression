#include <iostream>
using namespace std;

struct node{
	char isi;
	node *skip;
};

//
class stack{
  private:
	node *head=NULL;
	
  public:
	bool isEmpty(){
		if(head==NULL)
			return true;
		return false;
		}
//		
	void pushtostack(char a){
		node *baru=new node;
		baru->isi=a;
		baru->skip=NULL;
		if(isEmpty()){
			head=baru;
		}
		
		else{
			baru->skip=head;
			head=baru;
		}
	}
	char popfromstack(){
		if(isEmpty()){
			cout<<"Stack kosong!"<<endl;
			return 0;
		}
      		else{
			char ch=head->isi;
			node *tmp=head->skip;
			delete head;
			head=tmp;
			return ch;
		}
	}
//	
    	char top(){
		return head->isi;
	}	
    	void cetak(){
      		if(isEmpty()){
			cout<<"Stack Kosong!";
		}
      		else{
			node *bantu=head;
			while(bantu!=NULL){
			cout<<bantu->isi<<endl;
			bantu=bantu->skip;
			}
		}
	}    
};
